name: test3
on:
  push:
  workflow_dispatch:
    inputs:
      GlobeEnvironment:
        description: "The name of a Globe12 Environment"
        required: true
        default: "none"
        type: string
      logLevel:
        description: "Log level"
        required: true
        default: "warning"
jobs:
  job1:
    runs-on: ubuntu-latest
    name: A job to say hello
    env:
      VAR1: "var1"
    steps:
      - name: echo var1
        shell: bash
        run: |
          echo hello
          echo "VAR1=${{env.VAR1}}"
          echo "GlobeEnvironment=${{env.GlobeEnvironment}}"
      - run: echo ooo > o.txt
      - run: cat o.txt
  job2:
    runs-on: ubuntu-latest
    name: A job to say hello
    needs: job1
    steps:
      - name: job2 
        run: echo job2

  parallel-job:
    runs-on: ubuntu-latest
    name: A job to say hello
    steps:
      - name: parallel-job
        run: echo parallel-job
